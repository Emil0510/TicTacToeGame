<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playVsComputerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vs Computer"
        android:padding="8dp"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toTopOf="@+id/player2Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/player2Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2 Player"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/playVsComputerButton"
        app:layout_constraintStart_toStartOf="@+id/playVsComputerButton"
        app:layout_constraintTop_toBottomOf="@id/playVsComputerButton" />
</androidx.constraintlayout.widget.ConstraintLayout>